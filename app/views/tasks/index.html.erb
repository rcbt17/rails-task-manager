<div class="container d=flex py-5">
  <h1>My Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <% if task.completed %>
        <% check = 'checked' %>
      <% else %>
        <% check = ''%>
      <% end %>
      <li>
        <%= link_to task.title, task_path(task)%> <input class="form-check-input" type="checkbox"  <%= check %> >
        <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'New Task', new_task_path %>
</div>
